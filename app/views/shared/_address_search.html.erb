<%= javascript_pack_tag 'autofill' %>

<%= form_with url: '/searches', method: :get do |f|%>
  <div class="input-group mb-3">
    <%= f.text_field :address, class: "form-control google-autofill", placeholder: "Search by postcode or address", aria: { label:"Address search" }%>
    <div class="input-group-append">
      <%= button_tag type: 'submit', class: "btn btn-outline-secondary" do %>
        <span class="material-icons">search</span>
      <% end %>
    </div>
  </div>
<% end %>
